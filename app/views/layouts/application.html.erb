<!DOCTYPE html>
<html>
<head>
  <title>Bigpork</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div class="container-fluid">
			<div class="row">
				<div class="menu-section">
				<div id="alertSuccess" class="alert alert-success" style="position:fixed; display: none; z-index:10; width:100%; top:-5px; opacity:0.7;"></div>
				<div id="alertError" class="alert alert-danger" style="position:fixed; display: none; z-index:10; width:100%; top:-5px; opacity:0.7;"></div>			
					<div class="container-fluid">
						<div class="row">
							<div class="col-sm-offset-4 col-sm-4">
								<h1 class="title">buybuy !</h1>
							</div>
							<div class="col-sm-4 facebook-like">
								<iframe src="//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.howbeauty.tw&amp;width&amp;layout=button_count&amp;action=like&amp;show_faces=true&amp;share=true&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; height:21px;" allowTransparency="true"></iframe>				
							</div>							
							<div class="col-sm-offset-2 col-sm-2">
								<div class="menu-btn">
									<a href="#" id='school_menu' class="menu" style="display: none;"><span class="menu-pos" ></span></a>
								</div>
							</div>
								<div class="col-sm-offset-1 col-sm-6">
									<ul class="navigator nav">
										<div class="col-sm-3"><li><%= link_to "HOME", root_path %></li></div>
										<div class="col-sm-3"><li><%= link_to "POCKET", root_path %>	</li></div>
										<div class="col-sm-3"><li><%= link_to "CONTACT", "https://howbeauty.uservoice.com/" %></li></div>
										<div class="col-sm-3">
											<li>
												<div>
													<%if false%>  
													<%= link_to user_omniauth_authorize_path(:facebook) do%>
													<i class="fa fa-facebook-square" style="font-size:16px;"></i> LOG IN

													<% end%>
													<%= link_to "SIGN OUT !", destroy_user_session_path,:method=>"delete" %>
																<% else %>
													

													<%end%>  
												</div>			
											</li>											
										</div>

									</ul>      			
								</div>
							</div>
						</div>

						<%#=select("select", "school", @school_list.collect {|p| [ p[:title], p[:name] ] })%>  

					</div>					
				</div>
			</div>

		</header>
<%= yield %>

</body>
</html>
